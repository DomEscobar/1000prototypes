# Backend Dockerfile
FROM oven/bun:1 AS base

WORKDIR /app

# Copy server package files
COPY package.json bun.lock* ./

# Install dependencies
RUN bun install

# Copy server source code
COPY . .

# Build the application (if needed)
RUN bun run build || echo "No build script found, skipping build step"

# Expose port
EXPOSE 3000

# Run the application
CMD ["bun", "run", "start"] 