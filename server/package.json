{
  "name": "1000-prototypes-server",
  "version": "1.0.0",
  "description": "Bun server backend for 1000 Prototypes",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch index.ts",
    "start": "bun run index.ts",
    "build": "bun build index.ts --outdir ./dist --target bun",
    "lint": "bunx @biomejs/biome check .",
    "lint:fix": "bunx @biomejs/biome check --write ."
  },
  "dependencies": {
    "@google/genai": "^1.10.0",
    "@hono/node-server": "^1.12.2",
    "hono": "^4.6.2",
    "openai": "^5.10.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/bun": "latest",
    "bun-types": "latest"
  }
}
